<%= provide(:title, 'Sign Up')%>
<h4>Sign up</h4>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="login-field"><%= f.label :email %><br />
  <%= f.email_field :email, :autofocus => true %></div>

  <div class= "login-field"><%= f.label :password %><br />
  <%= f.password_field :password %></div>

  <div class= "login-field"><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation %></div>

  <div class= "login-action"><%= f.submit "Sign up" %></div>
<% end %>

<%= render "devise/shared/links" %>
<center><%= link_to "Return to Landing",  root_path%></center>
