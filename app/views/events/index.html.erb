<%= provide(:title, 'Events')%>
<header class= "navbar navbar-fixed-top navbar-inverse">
	<div class ="navbar-inner">
		<center>
	    <h2>CALENDAR APP</h2>
		</center>
		<nav>
			<ul class="nav pull-right">
				<li></li>
				<li><%= link_to "Calendar", calendar_path  %></li>
				<li><%= link_to "New Event", new_event_path %></li>
				<li><%= link_to "Log In", '#'%></li>
				<li><%= link_to "Log Out", '#'%></li>
			</ul>
		</nav>
	</div>		
</header>
<h1><center>Events List for USER.NAME</center></h1>

<table align="center">

  <tr>
  	<th>&nbsp</th>
  	<th>&nbsp</th>
    <th>Name</th>
    <th>&nbsp</th>
    <th>&nbsp</th>
    <th>Start at</th>
    <th>&nbsp</th>
	<th>&nbsp</th>
    <th>End at</th>
    <th></th>
    <th></th>
  </tr>

<% @events.each do |event| %>
  <tr>
  	<td>&nbsp</td>
  	<td>&nbsp</td>
  	<td><%= event.name %></td>
  	<td> | </td>
    <td>&nbsp</td>
    <td><%= event.start_at %> </td>
    <td>   |   </td>
    <td>&nbsp</td>
    <td><%= event.end_at %></td>
	<td>&nbsp</td>
    <td>[<%= link_to 'Show/Edit', event %>] </td>
    <td>[<%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %>]</td>       
  </tr>
<% end %>

</table>

