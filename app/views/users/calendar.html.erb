<!-- Probably move the stylesheet to you layout. Also make sure you include the javascript. -->
<%= javascript_include_tag 'event_calendar' %>
<%= stylesheet_link_tag "event_calendar" %>
<%= provide(:title, I18n.localize(@shown_month, :format => "%B %Y"))%>
<header class= "navbar navbar-fixed-top navbar-inverse">
	<div class ="navbar-inner">
		<center>	
	    << <%= month_link(@shown_month.prev_month) %> | <%= I18n.localize(@shown_month, :format => "%B %Y") %> | <%= link_to  month_link(@shown_month.next_month) %> >> <br>
		<%= link_to "Go to Current Month", calendar_path %>
		<br>

		</center>
		<nav>
			<ul class="nav pull-right-cal">
				<% if user_signed_in?%>
					<li><p>Welcome, <%= current_user.email %> | Not you?</p></li>					
					<li><%= link_to "Log Out", signout_path, :method => :delete%></li>
					<li><%= link_to "New Event", newevent_path %></li>
					<li><%= link_to "Events", events_path  %></li>	
				<% else %>
					<li><p>New User? </p></li>
					<li><%= link_to "Sign Up", signup_path %></li> 
					<li><p>Already have an account?</p></li>
					<li><%= link_to "Sign In", signin_path %></li>					
				<% end %>
										
			</ul>
		</nav>
	</div>		
</header>
<body>
<div class="center hero-unit">	
<%= raw(event_calendar) %>
</div>
</body>
